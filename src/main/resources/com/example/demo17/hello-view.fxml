<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: linear-gradient(to right, #4facfe, #8e44ad);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo17.controlador.HelloController">

    <!-- Título -->
    <children>
        <Label alignment="CENTER" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" text="Escritura Rápida" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="20" />

        <!-- Contenedor central -->
        <VBox alignment="CENTER" prefWidth="400" spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,4);" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100" AnchorPane.topAnchor="80">

            <!-- Sección de tiempo -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Tiempo" />
                <ProgressBar fx:id="progressTime" prefWidth="200" progress="1.0" />
                <Label fx:id="labelSeconds" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="20s" />
            </HBox>

            <!-- Palabra a escribir -->
            <Label fx:id="labelWord" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="ejemplo" />

            <!-- Campo de texto -->
            <TextField fx:id="textInput" prefWidth="250" promptText="Escribe aquí..." style="-fx-background-radius: 6; -fx-border-color: #cccccc; -fx-border-radius: 6;" />

            <!-- Nivel y botón -->
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Label fx:id="labelLevel" style="-fx-font-size: 14px; -fx-text-fill: #333333;" text="Nivel 1" />
                <Button fx:id="btnValidate" style="-fx-background-color: #ff5c5c; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="Validar" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
